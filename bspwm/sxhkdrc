# vim: set ft=sxhkdrc:

##########################
#Launcher
##########################
# Starts skype
ctrl + shift + s
    skype

# Starts ranger
ctrl + shift + r
    termite -e ranger

# Starts mpv
ctrl + shift + m
    mpv --no-terminal http://23.16.171.175:9884

# Kills mpv
ctrl + shift + j
    killall mpv

# Starts chromium
ctrl + shift + a
    chromium

# Starts weechat
ctrl + shift + w
    termite -e weechat

# Starts nmcpcpp
ctrl + shift + p
    termite -e ncmpcpp

# Starts gmrun
alt + r
    gmrun

##########################
#System
##########################

# Raises volume
XF86AudioRaiseVolume
    amixer set Master 2%+

# Lowers volume
XF86AudioLowerVolume
    amixer set Master 2%-

# Mutes
XF86AudioMute
    amixer set Master toggle

# Brightness goes up
XF86MonBrightnessUp
    brightnessScript

# Brightness goes down
XF86MonBrightnessDown
    brightnessScript

# Screen lock
XF86ScreenSaver
    blur

# Turns off laptop
XF86Launch1
    systemctl poweroff

# Reloads bspwm..don't know if it works
ctrl + super + r
    bspc reload

##########################
#For bspwm itself
##########################

# Rotates my tree
super + r
    bspc desktop -R 90

# Closes focused window
super + q
    bspc window -c

# Flips leaves horizontally
super + c
    bspc desktop -F horizontal

# Flips leaves vertically
super + v
    bspc desktop -F vertical

# Trying to figure out what this does
super + t
    bspc desktop -l next

# Balances the tree
super + b
    bspc desktop -B

# Toggles floating or fullscreen
super + {s,f}
    bspc window -t {floating,fullscreen}

# Toggles between last tag
super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

# Move current window into the biggest panel
super + m
    bspc window -s biggest

# Move current floating window into presel area
super + p
    bspc window -t floating -w last.manual

# Lock focused window's size.
shift + alt + l
    bspc window -t private

# Resize floating windows
alt + {Left,Right,Up,Down}
    xdo move {-x -30,-x +30,-y -30,-y +30}

# Resize floating windows
alt + shift + {Left,Right,Up,Down}
    xdo resize {-w -20,-w +20,-h -20,-h +20}

# Focus on floating / tiled
alt + {e,w}
    bspc window -f {next.floating,next.tiled}

# Moves window to (which ever direction)
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

# Move or resize window
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u


super + @button{1-3}
bspc pointer -u

# launches termite
super + Return
    termite

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# Change window gap
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))
